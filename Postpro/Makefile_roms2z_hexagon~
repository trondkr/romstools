#
#                                 Makefile for interpolating ROMS results to z-levels and A-grid
FC = gfortran
FFLAGS = -g
#
NC_CONFIG ?= nc-config

LIBPATH =  $(shell $(NC_CONFIG) --prefix)/lib
INCLUDE =  $(shell $(NC_CONFIG) --prefix)/include
#
LIBRARY = netcdff
#
TARGETS = all clean
EXECS   = roms2z
#
#
all: $(EXECS)

roms2z: roms2z.o
	$(FC) $(FFLAGS) -o $@ roms2z.f90 -O3 handle_err.f90 fill.f90 jd.f90 gregorian.f90 -I$(INCLUDE) -L$(LIBPATH) -l$(LIBRARY)

roms2z.o: roms2z.f90
fill.o: fill.f90
handle_err.o: handle_err.f90
jd.o: jd.f90
gregorian.o: gregorian.f90

clean:
	@for name in $(EXECS) ; do\
	(rm -f $$name $$name.o); \

	done
